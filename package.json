{
  "name": "@sowonai/nestjs-mcp-adapter",
  "version": "0.1.3",
  "description": "NestJS adapter for MCP(Model Context Protocol)",
  "keywords": [
    "nestjs",
    "mcp",
    "adapter",
    "modelcontextprotocol"
  ],
  "author": "doha.park@sowonlabs.com",
  "main": "dist/index.js",
  "license": "MIT",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sowonlabs/nestjs-mcp-adapter.git"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "prepare": "npm run build",
    "test": "npx vitest run",
    "lint": "eslint \"{src,apps,libs,tests}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "example:greet": "ts-node-dev -r tsconfig-paths/register examples/greet/main-http.ts",
    "example:greet:stdio": "ts-node-dev -r tsconfig-paths/register examples/greet/main-stdio.ts",
    "example:multi": "ts-node-dev -r tsconfig-paths/register examples/multi-server/main-http.ts",
    "example:multi:stdio": "ts-node-dev -r tsconfig-paths/register examples/multi-server/main-stdio.ts",
    "inspector": "npx @modelcontextprotocol/inspector --config inspector.config.json --server greet"
  },
  "peerDependencies": {
    "@modelcontextprotocol/sdk": "^1.11.0",
    "@nestjs/common": ">=9.0.0",
    "@nestjs/core": ">=9.0.0",
    "@nestjs/platform-express": "^11.0.5",
    "reflect-metadata": ">=0.1.14",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/common": "^11.0.5",
    "@nestjs/core": "^11.0.5",
    "@nestjs/testing": "^11.0.5",
    "@types/module-alias": "^2.0.4",
    "dotenv": "^16.5.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "module-alias": "^2.2.3",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "unplugin-swc": "^1.5.2",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "zod-to-json-schema": "^3.24.1"
  }
}
